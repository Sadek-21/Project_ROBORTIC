#include <LiquidCrystal.h>

//LiquidCrystal lcd(rs, en, d4, d5, d6, d7);
  LiquidCrystal lcd(13, 12, 11, 10,  9,  8);

//Define the Pin Numbers
const int CAPTEUR = 2;
const int REMPLISSAGE = 7;
const int VIDANGE = 6;
 
void setup ()  
{   
  pinMode (CAPTEUR, INPUT); // Set the Sensor pin as INPUT  
  pinMode(REMPLISSAGE, OUTPUT);  // Set the Red LED pin as OUTPUT 
  pinMode(VIDANGE, OUTPUT);  // Set the Green LED pin as OUTPUT 

  lcd.begin(20, 4); // set up the LCD's number of columns and rows:
  lcd.setCursor(0,0); // set the cursor position:
  lcd.print("Simulation Proteus 8 ");
  lcd.setCursor(0,1);
  lcd.print(" DETECTEUR DE PLUIE ");
}  
void loop ()  
{
  int Sensor_Val = digitalRead(CAPTEUR);  //get reading from Sensor
  
  if (Sensor_Val == HIGH) //If Sensor Detected the Rain
  {
    digitalWrite(REMPLISSAGE, HIGH);
    digitalWrite(VIDANGE, LOW);
    
    lcd.setCursor(0, 3);
    lcd.print(" La Pluie Arrive...    ");
    //delay(100);
  }
  else
  {
    lcd.setCursor(0, 3);
    lcd.print("   PAS DE PLUIE !      ");
    digitalWrite(REMPLISSAGE, LOW);
    digitalWrite(VIDANGE, HIGH);
  }
}
